{
  "name": "vscode-zhihu-publisher",
  "publisher": "yjkindex",
  "displayName": "vscode-zhihu-publisher",
  "description": "",
  "version": "1.3.2",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-zhihu-publisher.zhihuPublisher",
        "title": "Publish to Zhihu",
        "category": "Zhihu Publisher"
      },
      {
        "command": "vscode-zhihu-publisher.uploadImage",
        "title": "Upload image to Zhihu",
        "category": "Zhihu Publisher"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-zhihu-publisher.zhihuPublisher",
          "when": "editorTextFocus && resourceExtname == '.md'"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-zhihu-publisher.zhihuPublisher",
          "when": "!editorTextFocus && resourceExtname == '.md'"
        }
      ]
    },
    "configuration": {
      "title": "知乎发布助手配置",
      "properties": {
        "zhihuPublisher.cookie": {
          "type": "string",
          "description": "知乎网站的Cookie，用于身份验证",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.16.11",
    "@types/jest": "^30.0.0",
    "@types/md5": "^2.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.2",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "jest": "^30.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ali-oss": "^6.23.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "form-data": "^4.0.0",
    "md5": "^2.3.0",
    "vsce": "^2.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yjkindex/vscode-zhihu-publisher.git"
  },
  "icon": "img/logo.png",
  "license": "MIT"
}
